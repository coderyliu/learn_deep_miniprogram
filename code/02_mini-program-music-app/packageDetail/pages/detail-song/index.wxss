/* pages/detail-song/index.wxss */
page {
	padding: 0 20rpx;
}

.title {
	font-size: 40rpx;
	font-weight: bold;
}

.song-menu {
	display: flex;
	width: 100%;
	justify-content: space-around;
	align-items: center;
	margin-top: 20rpx;
	padding: 5rpx 0;
}

.seg {
	width: 50rpx;
	text-align: center;
}

.info {
	margin-left: 15rpx;
	width: 680rpx;
	position: relative;
}

.name {
	font-size: 30rpx;
	font-weight: 500;
}

.msg {
	margin-top: 10rpx;
	font-size: 22rpx;
	color: rgb(88, 97, 97);
	margin-left: 50rpx;
}

.icon {
	width: 40rpx;
	position: absolute;
	bottom: 2rpx;
}

.header {
	width: 100%;
	height: 470rpx;
	margin-top: 10rpx;
	position: relative;
	color: #fff;
	display: flex;
	flex-direction: column;
}

.head {
	position: absolute;
	z-index: -1;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
}

.back {
	position: absolute;
	z-index: -1;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background-color: rgba(0, 0, 0, .5);
	backdrop-filter: blur(5px);
}

.content {
	display: flex;
	flex-direction: row;
	padding: 0 50rpx;
	margin-top: 60rpx;
}

.content .point {
	width: 220rpx;
}

.info {
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	position: relative;
}

.avator {
	width: 60rpx;
	border-radius: 50%;
	position: relative;
	top: 10rpx;
	left: 25rpx;
}

.dest {
	display: inline-block;
	position: absolute;
	left: 100rpx;
	top: 120rpx;
}

.text-title {
	width: 100%;
	height: 50rpx;
	position: fixed;
	top: 0;
	left: 0;
}

.des {
	width: 100%;
	font-size: 26rpx;

	/* 显示两行 */
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
	display: -moz-box;
	-moz-line-clamp: 2;
	-moz-box-orient: vertical;
	word-wrap: break-word;
	word-break: break-all;
	white-space: normal;
	overflow: hidden;
}

.foot {
	display: flex;
	width: 500rpx;
	margin: 35rpx auto;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.favor {
	width: 300rpx;
	line-height: 50rpx;
	text-align: center;
}

.favor .icons {
	width: 50rpx;
}

.share {
	width: 200rpx;
	text-align: center;
	line-height: 50rpx;
}

.share .icons {
	width: 50rpx;
}

.share .msgs {
	font-size: 35rpx;
	color: #fff;
}