<!--components/nav-header/index.wxml-->
<view class="header">
	<view class="left">{{title}}</view>
	<view class="empty">
		<slot></slot>
	</view>
	<view class="default" wx:if='{{showRight}}' bind:tap='handleToggleClick'>
		<text class="text">{{rightText}}</text>
		<image src='/assets/images/icons/arrow-right.png' mode="widthFix" class="icon"></image>
	</view>
</view>