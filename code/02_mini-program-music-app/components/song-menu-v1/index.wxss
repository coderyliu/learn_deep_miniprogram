/* components/song-menu-v1/index.wxss */
.menu-list {
	white-space: nowrap;
	margin-top: 20rpx;
	position: relative;
	left: -20rpx;
}

.menu-item {
	display: inline-block;
	width: 200rpx;
	height: 200rpx;
	margin-left: 20rpx;
	margin-right: 20rpx;
}

.top-image .point {
	width: 200rpx;
	border: 1rpx solid #ccc;
	border-radius: 10rpx;
}

.title {
	width: 100%;
	font-size: 26rpx;

	/* 显示两行 */
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
	display: -moz-box;
	-moz-line-clamp: 2;
	-moz-box-orient: vertical;
	word-wrap: break-word;
	word-break: break-all;
	white-space: normal;
	overflow: hidden;
}