/* pages/home-music/index.wxss */
page {
    padding: 0 20rpx;
}

.van-search {
    padding: 10rpx 0 !important;
    /* background-color: #fff !important; */
}

.banner {
    width: 100%;
    border-radius: 10rpx;
    overflow: hidden;
    transform: translateY(0);
}

.swiper-item {
    display: flex;
}

.swiper-item .points {
    width: 750rpx;
}

.footer {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding: 0 10rpx;

    position: fixed;
    width: 100%;
    height: 44px;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #fafafa;
}

.footer .left {
    display: flex;
    align-items: center;
}

.footer .left .picture {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;

    position: relative;
    top: -8rpx;
}

.footer .left .title {
    margin-left: 20rpx;
}

.footer .right {
    display: flex;
    align-items: center;
}

.footer .right .play,
.footer .right .icon {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}

/* 给图片添加动画 */
.footer .left .album {
    animation: albumRotate 16s linear infinite;
}

@keyframes albumRotate {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg)
    }
}

.footer-bar {
    height: 44px;
}

.nav-sign {
    display: flex;
    justify-content: space-between;
    align-items: center;

    width: 100%;
    height: 40px;
    background-color: #fafafa;
}

.nav-sign .avatar {
    width: 40px;
    border-radius: 50%;
    animation: albumRotate 16s linear infinite;
}

.sign-title {
    color: rgb(42, 194, 37);
}